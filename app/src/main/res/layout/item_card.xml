<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/propImg"
        android:layout_width="129dp"
        android:layout_height="98dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_mapmode" />

    <TextView
        android:id="@+id/propAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="5dp"
        android:text=""
        android:ellipsize="end"
        android:maxLines="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/propImg"
        app:layout_constraintLeft_toRightOf="@id/propImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_min="150dp" />

    <TextView
        android:id="@+id/propPrice"
        android:layout_width="121dp"
        android:layout_height="29dp"
        android:text=""
        android:layout_marginLeft="5dp"
        app:layout_constraintStart_toEndOf="@+id/propImg"
        app:layout_constraintLeft_toRightOf="@id/propImg"
        app:layout_constraintTop_toBottomOf="@+id/propAddress"
        app:layout_constraintVertical_bias="0.029" />
</androidx.constraintlayout.widget.ConstraintLayout>